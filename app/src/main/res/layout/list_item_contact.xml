<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/contact_card_height"
                                    android:layout_marginBottom="@dimen/contact_card_view_bottom_margin"
                                    android:animateLayoutChanges="true"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:elevation="@dimen/contact_card_elevation"
                                    card_view:cardBackgroundColor="@color/theme_contact_card_background_unselected"
                                    card_view:cardCornerRadius="@dimen/contact_card_corner_radius"
                                    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_padding">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/contact_favorite"
            android:scaleType="centerInside"
            android:src="@drawable/contact_favorite"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/thumbnail"
            android:layout_toStartOf="@id/favorite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>


            <TextView
                android:id="@+id/position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>