<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:colorPrimary">@color/theme_primary</item>
        <item name="android:textColorPrimary">@color/theme_text_primary</item>
        <item name="android:windowBackground">@color/theme_app_background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/theme_actionbar_background</item>
        <item name="android:minHeight">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:elevation">@dimen/actionbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textColor">@color/theme_toolbar_title</item>
        <item name="android:textSize">@dimen/theme_toolbar_title</item>
    </style>

    <style name="ContactListName">
        <item name="android:textSize">@dimen/contact_list_name</item>
        <item name="android:textColor">@color/theme_contact_list_name</item>
    </style>

    <style name="ContactListTitle">
        <item name="android:textSize">@dimen/contact_list_title_name</item>
        <item name="android:textColor">@color/theme_contact_list_title</item>
    </style>

    <style name="ContactPictureOverlay">
        <item name="android:textColor">@color/theme_standard_text</item>
        <item name="android:background">@drawable/contact_picture_overlay_background</item>
        <item name="android:textSize">@dimen/contact_picture_overlay_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactFieldType">
        <item name="android:textColor">@color/theme_standard_text</item>
        <item name="android:padding">@dimen/contact_field_textview_padding</item>
    </style>

    <style name="ContactFieldValue">
        <item name="android:background">@drawable/contact_field_view_value_background</item>
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/contact_field_textview_padding</item>
        <item name="android:textSize">@dimen/contact_field_value</item>
        <item name="android:textColor">@color/theme_contact_field_value</item>
    </style>

    <dimen name="theme_toolbar_title">20sp</dimen>
</resources>
